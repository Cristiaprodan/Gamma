{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "api/db.js",
    "app/auth.js",
    "app/[locale]/page.jsx",
    "app/[locale]/layout.jsx",
    "app/[locale]/product/[product]/page.jsx",
    "app/[locale]/dashboard/page.jsx",
    "app/[locale]/wishlist/page.jsx",
    "app/[locale]/category/[category]/page.jsx",
    "app/[locale]/category/[category]/[subcategory]/[subsubcategory]/page.jsx",
    "app/[locale]/category/[category]/[subcategory]/page.jsx",
    "components/TopCategories.jsx",
    "components/Menu.jsx",
    "app/[locale]/(Pages)/delivery/page.jsx",
    "app/[locale]/(Pages)/shop/bestsellers/page.jsx",
    "app/[locale]/(Pages)/shop/discounts/page.jsx",
    "app/[locale]/(Pages)/shop/page.jsx",
    "app/[locale]/(Pages)/about/page.jsx",
    "app/[locale]/(Pages)/contact/page.jsx",
    "app/[locale]/(Legals Pages)/return-refunds/page.jsx",
    "app/[locale]/(Legals Pages)/privacy-policy/page.jsx",
    "app/api/auth/profile/route.js",
    "app/api/auth/[...nextauth]/route.js",
    "app/api/auth/register/route.js",
    "app/api/auth/register/route.js",
    "app/api/auth/update-profile/route.js",
    "components/ImageCarousel.jsx",
    "components/AuthModal.jsx",
    "components/Shop/BestSellingProducts.jsx",
    "components/Shop/DiscoutedProducts.jsx",
    "components/Shop/ProductCard.jsx",
    "components/Providers/SessionProvider.jsx",
    "components/ProductPage/ProductCarousel.jsx",
    "components/ProductPage/AnimatedHeart.jsx",
    "components/ProductPage/ProductDescription.jsx",
    "components/Header/CategorieDropDown.jsx",
    "components/Header/HeaderMobile.jsx",
    "components/Header/HeaderDesktop.jsx",
    "components/Header/ModeToggle.jsx",
    "components/Header/SearchBar.jsx",
    "components/Dashboard/ProfileTab.jsx",
    "components/Dashboard/OrdersTab.jsx",
    "components/Dashboard/AdressTab.jsx",
    "components/CategoriesCards/SubSubCategoryCard.jsx",
    "components/CategoriesCards/SubCategoryCard.jsx"
  ],
  "exclude": ["node_modules"]
}
